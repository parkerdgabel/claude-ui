# Application Settings
APP_NAME="Claude UI"
APP_VERSION="0.1.0"
APP_ENV="development"
DEBUG=true

# API Settings
API_HOST="0.0.0.0"
API_PORT=8000

# Database
DATABASE_URL="sqlite+aiosqlite:///./claude_ui.db"

# Security
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Claude Code Settings
CLAUDE_CODE_PATH="claude"  # Path to claude command
MAX_INSTANCES=5
DEFAULT_TIMEOUT=120000  # 2 minutes in milliseconds

# Session Settings
SESSION_CLEANUP_INTERVAL=3600  # 1 hour in seconds
MAX_SESSION_AGE_DAYS=30

# File Storage
UPLOAD_DIR="./uploads"
MAX_UPLOAD_SIZE=10485760  # 10MB

# Git Settings
DEFAULT_WORKTREE_BASE="./worktrees"

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="%(asctime)s - %(name)s - %(levelname)s - %(message)s"